<h1>Liste des particuliers</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Prénom</th>
  </tr>

  <% @particuliers.each do |par| %>
    <tr>
      <td><%= par.nomP %></td>
      <td><%= par.prenomP %></td>
      <td><%= link_to 'Informations', client_path(par) %></td>
      <td><%= link_to 'Supprimer', client_path(par),
              method: :delete,
              data: { confirm: 'Êtes-vous sûr ?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Retour', clients_path %>
