<%= link_to "Retour", accueil_path %>
<h1>Changer les informations de <%= @particulier.nomP %> <%= @particulier.prenomP %> </h1>

<% if @particulier.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@particulier.errors.count, "error") %> prohibited
      this particulier from being saved:
    </h2>
    <ul>
      <% @particulier.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @particulier,local: true, url: client_path) do |f| %>
  <%= label_tag :particulier_nomP, "Nom" %>
  <%= f.text_field :nomP %>

  <%= label_tag :particulier_prenomP, "Prénom" %>
  <%= f.text_field :prenomP %>

  <%= label_tag :particulier_adresseC, "Adresse" %>
  <%= f.text_field :adresseC %>

  <%= label_tag :particulier_mailC, "Adresse mail" %>
  <%= f.email_field :mailC %>

  <%= label_tag :particulier_numTelC, "Numéro de téléphone" %>
  <%= f.text_field :numTelC %>

   <%= f.submit %>
<% end %>
